<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="47dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#713F10" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="110dp"
            android:text="设置管理"
            android:textSize="18dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/relativeLayout1"
        android:layout_centerHorizontal="true"
        android:background="#42680F"  >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#42680F"
            android:orientation="vertical" >
	        <TextView
	            android:id="@+id/textView2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="11dp"
	            android:textSize="16dp"
	            android:text="功能项" />
	                
	        <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_alignParentTop="true"
	            android:layout_centerHorizontal="true"
	            android:background="#233908"
	            android:orientation="vertical" >

	            <Button
	                android:id="@+id/btn_network"
	                android:layout_width="fill_parent"
	                android:layout_height="45dp"
	                android:background="@drawable/selector_menu_btn_color"
	                android:drawableLeft="@drawable/ic_collection"
	                android:textColor="#E5E5E5"
	                android:textSize="16sp"
	                android:layout_marginBottom="1dip"
	                android:text="Network" />

	            <Button
	                android:id="@+id/btn_wifi"
	                android:layout_width="fill_parent"
	                android:layout_height="45dp"
	                android:background="@drawable/selector_menu_btn_color"
	                android:drawableLeft="@drawable/ic_collection"
	                android:textColor="#E5E5E5"
	                android:textSize="16sp"
	                android:layout_marginBottom="1dip"
	                android:text="Wifi" />

	            <Button
	                android:id="@+id/btn_bluetooth"
	                android:layout_width="fill_parent"
	                android:layout_height="45dp"
	                android:background="@drawable/selector_menu_btn_color"
	                android:drawableLeft="@drawable/ic_collection"
	                android:textColor="#E5E5E5"
	                android:textSize="16sp"
	                android:layout_marginBottom="1dip"
	                android:text="Bluetooth" />

	            <Button
	                android:id="@+id/btn_nfc"
	                android:layout_width="fill_parent"
	                android:layout_height="45dp"
	                android:background="@drawable/selector_menu_btn_color"
	                android:drawableLeft="@drawable/ic_collection"
	                android:textColor="#E5E5E5"
	                android:textSize="16sp"
	                android:layout_marginBottom="1dip"
	                android:text="NFC" />
	            
	            <Button
	                android:id="@+id/btn_plugin"
	                android:layout_width="fill_parent"
	                android:layout_height="45dp"
	                android:background="@drawable/selector_menu_btn_color"
	                android:drawableLeft="@drawable/ic_collection"
	                android:textColor="#E5E5E5"
	                android:textSize="16sp"
	                android:layout_marginBottom="1dip"
	                android:text="插件" />

	        </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>